<section class="container">
  <h3 class="album-name">{{album.name}}</h3>
  <h4>Opening Hour: {{format_time album.starting_date}}</h4>
  <h4>Closing Hour: {{format_time album.ending_date}}</h4>
  <section class="flex-row justify-center">
    {{#each album.photos as |photo|}}
    {{> photo-details}}
    {{/each}}
  </section>
</section>
